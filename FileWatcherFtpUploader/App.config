<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<appSettings>
		<add key="MonitorFolder" value="C:\FolderToMonitorForNewlyCreatedFiles\"/>
		<add key="FtpServer" value="ftp://ftpserver.com/"/>
		<add key="FtpUser" value="username"/>
		<add key="FtpPassword" value="password"/>
		<add key="WaitMinutesBetweenTryingToReadTheFile" value="5"/>
		<add key="MaxNumberOfTriesToReadTheFiles" value="3"/>
		<add key="ShouldUseYearAsFtpPath" value="True"/>
		<add key="ShouldUseMonthAsFtpPath" value="True"/>
		<add key="ShouldUseDayAsFtpPath" value="True"/>
		<add key="MaxNumberOfFtpConnections" value="3"/>
	</appSettings>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>